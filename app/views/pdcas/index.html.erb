<% provide(:title, @user.name) %>

<h1><%= @user.name %>のタスク一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_pdca_path(@user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Pdca.human_attribute_name :plan %></th>
          <th><%= Pdca.human_attribute_name :do %></th>
          <th><%= Pdca.human_attribute_name :check %></th>
          <th><%= Pdca.human_attribute_name :adjust %></th>
        </tr>
      </thead>

      <tbody>
        <% @pdcas.each do |pdca| %>
          <tr>
            <td><%=  pdca.plan %></td>
            <td><%= pdca.do %></td>
            <td><%=  pdca.check %></td>
            <td><%=  pdca.adjust %></td>
            <td>
            <%= link_to "編集", edit_user_pdca_path(@user, pdca), class: "btn btn-success" %>
             <%= link_to "削除", user_pdca_path(@user, pdca), method: :delete,
              data: { confirm: "こちらを削除します。よろしいですか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>    
</div>