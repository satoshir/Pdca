<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_pdca_path(@user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Pdca.human_attribute_name :task %></th>
          <th><%= Pdca.human_attribute_name :created_at %></th>
        </tr>
      </thead>

      <tbody>
        <% @pdcas.each do |pdca| %>
          <tr>  
            <td><%= link_to pdca.plan, user_pdca_path(@user, pdca), id: "pdca-name" %></td>
            <td><%= @today %></td>
            <td><%= pdca.time %></td>
            <td>
            <%= link_to "編集", edit_user_pdca_path(@user, pdca), class: "btn btn-success" %>
            <%= link_to "削除", user_pdca_path(@user, pdca), method: :delete,
              data: { confirm: "こちらを削除します。よろしいですか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>    
</div>